<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.NoteContent">

        <EditText
            android:id="@+id/Note_content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20sp"
            android:gravity="top"
            android:maxLines="1"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black"
            android:id="@+id/content_fg"
            app:layout_constraintTop_toBottomOf="@id/Note_content_title"/>
        <EditText
            android:id="@+id/Note_content_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:scrollbars="vertical"
            android:inputType="textMultiLine"
            android:enabled="true"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/content_fg"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/Note_create_time"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/Note_content_time" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/Note_content_del"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/Note_create_time"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/note_content_edit"
            android:id="@+id/Note_content_del"
            android:text="Delete!"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Edit!"
            android:id="@+id/note_content_edit"
            />


